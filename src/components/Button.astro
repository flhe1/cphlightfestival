---
const text = Astro.props.text;
const variant = Astro.props.variant;
const size = Astro.props.size;
---

<button class={variant + " " + size}><slot></button>

<style>

    button{

    background-color: rgba(0, 0, 0, 0);
    cursor: pointer;
    color: white;
    border-image: linear-gradient(to right, #43BFBE, #5581CD, #B65AA7, #F54D47) 1;
    position: relative; /* Position relative for pseudo-element positioning */
    overflow: hidden; /* Hide overflow to contain gradient animation */
    z-index: 1; /* Ensure button text appears on top of the gradient */
    transition: border-image 0.5s ease; /* Smooth transition for border-image property */
    border-width: px; /* Set border width */
    border-style: solid; /* Set border style to solid */
    border-image-slice: 1; /* Make sure the gradient covers the entire border */
     transition: background-position 0.5s ease; 

    }

/* Hover Animation */
button:hover {
    animation: moveGradient 0.7s infinite; /* Apply animation on hover */
}

@keyframes moveGradient {
    0% {
        border-image-source: linear-gradient(to right, #43BFBE, #5581CD, #B65AA7, #F54D47); /* Starting gradient */
    }
    25% {
        border-image-source: linear-gradient(to right, #5581CD, #B65AA7, #F54D47, #43BFBE); /* Move gradient clockwise */
    }
    50% {
        border-image-source: linear-gradient(to right, #B65AA7, #F54D47, #43BFBE, #5581CD); /* Move gradient clockwise */
    }
    75% {
        border-image-source: linear-gradient(to right, #F54D47, #43BFBE, #5581CD, #B65AA7); /* Move gradient clockwise */
    }
    100% {
        border-image-source: linear-gradient(to right, #43BFBE, #5581CD, #B65AA7, #F54D47); /* Back to starting gradient */
    }
}


